<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css">
<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">
<style>
  .partner-ownerName {
    color: #fff;
    padding: 5px;
  }
  .partner-ownerName:hover {
    color: #ccc;
  }
</style>
<div class="container">
<br><br><br><br>
<center>
<p class="has-text-white title is-large"><i class="fad fa-newspaper has-text-primary"></i>&nbsp;News</p>
<<p class="content has-text-white" style="margin-top: -20px;">Join our <a href="/dc">discord server</a> to view more news!.</p> 
</center>
<div class="columns is-multiline is-desktop is-variable is-7 mt-3 pt-5">
  <% db.get(`news`).map(a => { %>
        <div class="col-md-6 col-lg-4 pb-3">
          <div data-aos="fade-down">
        <div class="card disbots-card-custom bg-disbots">
          <div class="disbots-card-custom-img" style="https://cdn.discordapp.com/attachments/860627883731320866/878672438269997086/undefined_back_2.png"></div>
          <div class="disbots-card-custom-avatar">
            <img class="img-fluid" onerror="imgError(this);" src="<%=a.icon%>" alt="Avatar" />
          </div>
          <div class="card-body">
           <div class="is-pulled-right mt-disbots mt-1">
                written by: <span class="card-title"><%= bot.users.cache.get(a.ownerID) ? bot.users.cache.get(a.ownerID).username : "undefined" %>#<%= bot.users.cache.get(a.ownerID) ? bot.users.cache.get(a.ownerID).discriminator : "0000" %></span>
              </div>
              <br>
              <div class="is-pulled-right mt-disbots mt-1">
                publish date: <span class="card-title"><%= a.date %></span>
                </div>
            <br><h4 translate="no" class="card-title"><%= a.serverName %>
              <span data-tooltip="Verified News" data-tooltip-location="top"><i class="fad fa-badge-check has-text-success"></i></span>
            </h4>
            <p translate="no" class="card-text disbotsbotDesc"><%= a.description %></p>
          </div>
        </div>
          </div>
      </div>
  <% }) %>
</div>
</div>
 <script src="https://www.google.com/recaptcha/api.js"></script>
  <script>
   function onSubmit(token) {
     document.getElementById("demo-form").submit();
   }
 </script>
 <button class="g-recaptcha" 
        data-sitekey="6LcwY-EbAAAAAKz8nJRLxW-lxG4Yyrf-R8TB-d7K" 
        data-callback='onSubmit' 
        data-action='submit' style="display: none;">Submit</button>
